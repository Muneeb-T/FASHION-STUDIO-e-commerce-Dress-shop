                            <div class="col  m-3 p-3 font-weight-bold">


                                <div class="row">

                                    <div class="col">
                                        <p>{{this.name}}, {{this.houseName}},<br> {{this.town}},{{this.district}},
                                            <br>{{this.state}}, {{this.pincode}}
                                        </p>

                                        <p>Email : {{this.email}}</p>

                                        <p>Phone : {{this.phoneNumber}}</p>
                                    </div>
                                </div>
                                <div class="mt-3  mb-0">
                                    <a href="/editAddress/{{this._id}}" class="btn btn-sm btn-primary">Edit</a>
