<div class="container mb-4 p-t-100">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body p-5">
                        <div class="d-flex flex-column align-items-center">
                            <div class="profile-pic-wrapper">

                                <form id="updateProfilePictureForm" method="post" enctype="multipart/form-data">
                                    <div class="pic-holder mx-auto">
                                        <!-- uploaded pic shown here -->
                                        <img id="profilePic" class="pic"
                                            src="{{#if userDetails.profilePicture}} /admin/product-images/{{userDetails.profilePicture}} {{else}}/users/images/icons/profile_picture_placeholder.png{{/if}}">

                                        <Input class="uploadProfileInput" type="file" name="profile_pic"
                                            id="newProfilePhoto" accept="image/*" style="opacity: 0;" />
                                        <label for="newProfilePhoto" class="upload-file-block">
                                            <div class="text-center">
                                                <div class="mb-2">
                                                    <i class="fa fa-camera fa-2x"></i>
                                                </div>
                                                <div class="text-uppercase">
                                                    Update
                                                </div>
                                            </div>
                                        </label>
                                    </div>




                                    <button id="updateButton" type="button"
                                        class="btn btn-sm stext-70 font-weight-bold cl0 bg1 bor1 hov-btn1 p-lr-15 trans-04"
                                        onclick="event.preventDefault(); updateProfilePicture();" hidden>Update</button>
                                    <button id="cancelButton" type="button"
                                        class="btn btn-sm stext-70 font-weight-bold cl0 btn-danger bor1 hov-btn1 p-lr-15 trans-04"
                                        onclick="event.preventDefault(); cancelUpdateProfilePicture();"
                                        hidden>Cancel</button>
                                </form>
                                </hr>

