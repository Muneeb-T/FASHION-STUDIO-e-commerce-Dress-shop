<div class="container p-t-100 mb-5 justify-content-center ">

    <div class="col-10 p-2  mx-auto d-flex align-items-center justify-content-between p-0"
        style="background-color: #007bff;">
        <h4 class="text-light ml-3">INVOICE</h4>
        <button class="btn btn-outline-light d-flex align-items-center" id="downloadButton"
            onclick="generatePDF()"><span class="material-icons">
                file_download
            </span>Download as PDF</button>
    </div>

    <div class='col-10 mx-auto card-body border border-dark p-5' id="invoice">

        <div class="row mb-3">
            <div class="col d-flex justify-content-between align-items-center">
                <h2 class="font-weight-bold">FASHION STUDIO</h2>
                <p class="font-weight-bold text-dark mb-0 p-3">

                    <span class="font-weight-light text-muted">
                        Invoice : <span class="text-uppercase">{{orderDetails._id}}</span> <br>
                        Date : {{orderDetails.orderDate}} <br>
                    </span>
                </p>


            </div>
        </div>
        <hr class="bg-dark mb-5">
        <div class="row mb-5">
            <div class="col">
                <p class="font-weight-bold text-dark mb-0">
                    BILLED TO:
                    <br>
                    <span class="font-weight-light text-muted">
                        {{orderDetails.address.name}},
                        {{orderDetails.address.houseName}} <br>
                        {{orderDetails.address.town}} <br>
                        {{orderDetails.address.district}} <br>
                        {{orderDetails.address.state}},
                        {{orderDetails.address.pincode}} <br>
                        Email : {{orderDetails.address.email}} <br>
                        Phone : {{orderDetails.address.phoneNumber}}
                        <br><br>
                        <p class="text-dark mb-0">
                            <span class="font-weight-bold "> PAYMENT METHOD :</span> {{orderDetails.paymentMethod}}
                        </p>
                    </span>
                </p>
            </div>

        </div>

        <div class="row ">



            <div class="col">

                <div style="border-radius: 10px;">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th scope="col">S.No</th>
                                <th scope="col">Item</th>
                                <th scope="col">Size</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Unit cost</th>
                                <th scope="col">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each orderedProducts}}
                            <tr>
                                <th>{{inc @index}}</th>
                                <td>{{this.product.product_name}}</td>
                                <td>{{this.size}}</td>
                                <td>{{this.quantity}}</td>
                                <td>Rs.{{this.product.price}}</td>
                                <td>Rs.{{this.totalPrice}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>

                </div>


            </div>
        </div>
        <hr class="mt-0">
        <div class="row">
            <div class="col">
                <div class=" border-0" style="border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">

                    <div class="row p-3">




                        <div class="col d-flex justify-content-between p-3">

                            <h5 class="d-flex m-3 text-dark align-items-center justify-content-end text-white mb-0">
                                Total
                                Amount : <span class="h3 mb-0 ml-2">Rs.{{orderDetails.amountPayable}}</span>
                            </h5>
                            <p class="font-weight-bold text-dark mb-0">

                                <span class="font-weight-light">

                                    Subtotal : Rs.{{orderDetails.totalPrice}} <br>
                                    Discount : Rs.{{orderDetails.discount}} <br>
                                    Total : Rs.{{orderDetails.amountPayable}}

                                </span>
                            </p>

                        </div>



                    </div>

                </div>
            </div>
        </div>

    </div>
</div>


