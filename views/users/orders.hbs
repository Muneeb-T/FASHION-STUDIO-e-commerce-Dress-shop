<div class="container p-t-100 mb-5 justify-content-center">
    {{#if ordersList}}
    <h3 class="mb-3 text-center text-primary font-weight-bold">Your orders</h3>
    <table class="table table-borderless table-responsive">
        <thead>
            <tr>
                <th scope="col">OrderID & Date</th>
                <th scope="col">Address</th>
                <th scope="col">Total amount</th>
                <th scope="col">Payment</th>
                <th scope="col">Order status</th>
                <th scope="col">Details</th>
            </tr>
        </thead>
        <tbody>

            {{#each ordersList}}
            <tr>
                <td class="text-uppercase">ID : {{this._id}} <br>{{this.orderDate}}</td>
                <td>{{this.address.name}},{{this.address.houseName}} <br>
                    {{this.address.town}},{{this.address.district}} <br>
                    {{this.address.state}}, {{this.address.pincode}} <br>
                    Email : {{this.address.email}} <br>
                    Phone : {{this.address.phoneNumber}}
                </td>
                <td>Rs.{{this.amountPayable}}</td>
                <td>{{this.paymentMethod}}</td>
                <td>{{this.orderStatus}}</td>
                <td><a href="/order/{{this._id}}" class="btn btn-primary">View</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}

    <div class="container-fluid  mt-100">
        <div class="row">

            <div class="col-md-12">


                <div class="card-body cart">
                    <div class="col-sm-12 empty-cart-cls text-center">
                        <img src="https://i.imgur.com/dCdflKN.png" width="130" height="130" class="img-fluid mb-4 mr-3">
                        <h3><strong>Oops! No orders found</strong></h3>
                        <h5 class="mt-2">Please order something</h5>
                        <a href="/" class="btn m-3 stext-101 cl0 bg1 bor1 hov-btn1 p-lr-15 trans-04"
                            data-abc="true">Shop now</a>


                    </div>
                </div>

            </div>

        </div>

    </div>

    {{/if}}
</div>

<style>
    td{
        vertical-align: middle !important;
    }
</style>


<script src='https://code.jquery.com/jquery-3.1.1.js'></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.all.min.js"></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js'></script>

